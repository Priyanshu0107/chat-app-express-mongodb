<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>frontend</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h3>ALL CHATS</h3>
    <form method="GET" action="/chats/new">
         <button>new chat</button></form>
<% for(let chat of chats){ %>
    <div class="chat">
        <p>From:<%= chat.from%></p>
        <div class="msg">
            <p><%=chat.msg%></p>
            <!-- <form method="GET" action="/chats/<%= chat._id%>/edit">
                <button>edit</button>
            </form> -->
            <a href="/chats/<%= chat._id %>/edit" class="edit-btn">Edit</a>
            <form method="POST" action="/chats/<%= chat._id%>?_method=DELETE">
                <button>delete</button>
            </form>
        </div>
        <p>recived:<%=chat.to%></p>
        <hr>
        <hr>
        <p>time:<%=chat.created_at.toString().split(" ")[4]%></p>
        <p>time:<%=chat.created_at.toString().split(" ").slice(0,4).join(" ")%></p>
    </div>
    <br>
<%}%>
</body>

</html>